<%console.log("name: ", name) %>

<div class="col-sm-2" style="min-width: 300px" id = "<%=concept.elementID%>">
    <div class="agent panel panel-default" >
        <div class="panel-heading" style="text-align: center;"><%=concept.name%>
            <button id = "delete_<%=concept.elementID%>" type="button" class="btn btn-lg pull-right close" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
        </div>

        <%if("properties" in concept){%>
        <div class="row" style="border-bottom: 1px #9d9d9d dotted;">
            <div class="col-md-12" style="font-weight: bold;">Properties</div>
        </div>
        <select id = "sel_prop_<%=concept.elementID%>" class="form-control dropdown-select" style="position: relative; display: inline;">
            <option value="">[-- Create new property --]</option>
            <% for(var p in concept.properties) { %>
            <option value= <%= p%>><%= concept.properties[p].name%></option>
            <% } %>
        </select>
        <div id = "row_prop_<%=concept.elementID%>" class="row agent_properties">
        </div>
        <%}%>
        <%if("behaviors" in concept){%>
        <div class="row" style="border-bottom: 1px #9d9d9d dotted; border-top: 1px #9d9d9d dotted;">
            <div class="col-md-12" style="font-weight: bold;">Behaviors</div>
        </div>
        <select id = "sel_be_<%=concept.elementID%>" class="form-control dropdown-select" style="position: relative; display: inline;">
            <option value="">[-- Create new behavior --]</option>
            <% for(var p in concept.behaviors) {%>
            <option value= <%= p%>><%= concept.behaviors[p].name%></option>
            <% } %>
        </select>
        <div id = "row_be_<%=concept.elementID%>" class="row agent_behaviors">
        </div>
        <%}%>
    </div>
</div>