<%console.log("name: ", name) %>

<div class="col-sm-2" style="min-width: 300px">
    <div class="agent panel panel-default" >
        <div class="panel-heading" style="text-align: center;"><%=concept.name%>
            <button type="button" class="btn btn-lg pull-right close" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
        </div>

        <%if("properties" in concept){%>
        <div class="row" style="border-bottom: 1px #9d9d9d dotted;">
            <div class="col-md-12" style="font-weight: bold;">Properties</div>
        </div>
        <select class="form-control dropdown-select" style="position: relative; display: inline;">
            <option value="">[-- Create new property --]</option>
            <% for(var p in concept.properties) { if (!concept.properties[p].selected){%>
            <option value= <%= p%>><%= concept.properties[p].name%></option>
            <% }} %>
        </select>
        <div class="row agent_properties">
            <% for(var p in concept.properties) { if (concept.properties[p].selected){%>
            <div class="row">
                <div class="col-md-12 master"><%= concept.properties[p].name%>
                    <button type="button" class="btn btn-lg pull-right close" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
                </div>
            </div>
            <% } }%>
        </div>
        <%}%>
        <%if("behaviors" in concept){%>
        <div class="row" style="border-bottom: 1px #9d9d9d dotted; border-top: 1px #9d9d9d dotted;">
            <div class="col-md-12" style="font-weight: bold;">Behaviors</div>
        </div>
        <select class="form-control dropdown-select" style="position: relative; display: inline;">
            <option value="">[-- Create new behavior --]</option>
            <% for(var p in concept.behaviors) { if (!concept.behaviors[p].selected){%>
            <option value= <%= p%>><%= concept.behaviors[p].name%></option>
            <% }} %>
        </select>
        <div class="row agent_behaviors">
            <% for(var p in concept.behaviors) { if (concept.behaviors[p].selected){%>
            <div class="row">
                <div class="col-md-12 master"><%= concept.behaviors[p].name%>
                    <button type="button" class="btn btn-lg pull-right close" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
                </div>
            </div>
            <% } }%>
        </div>
        <%}%>
    </div>
</div>